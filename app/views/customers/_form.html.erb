<div class="panel panel-default">
  <div class="panel-heading">Detalles Del Cliente</div>
  <div class="panel-body">
  <%= form_for(@customer) do |f| %>
    <%= render :partial => 'template/form_errors', :object => @customer %>

      <div class="row">
        <div class="col-sm-6">
          <label>Nombre</label>
          <%= f.text_field :first_name, :class => "form-control", :placeholder => "First Name" %>
        </div>
        <div class="col-sm-6">
          <label>Apellidos</label>
          <%= f.text_field :last_name, :class => "form-control", :placeholder => "Last Name" %>
        </div>
      </div>

        <div class="row">
          <div class="col-sm-6">
            <label>Telefono</label>
            <%= f.text_field :phone_number, :class => "form-control", :placeholder => "Phone Number" %>
          </div>
          <div class="col-sm-6">
            <label>Email</label>
            <%= f.text_field :email_address, :class => "form-control", :id =>  "exampleInputEmail1", :placeholder => "Email Address" %>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-6">
            <label>Direccion</label>
            <%= f.text_field :address, :class => "form-control", :placeholder => "Address" %>
          </div>
          <div class="col-sm-6">
            <label>Ciudad</label>
            <%= f.text_field :city, :class => "form-control", :placeholder => "City" %>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-6">
            <label>Estado</label>
            <%= f.text_field :state, :class => "form-control", :placeholder => "State" %>
          </div>
          <div class="col-sm-6">
            <label>C.P</label>
            <%= f.text_field :zip, :class => "form-control", :placeholder => "Zip" %>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12">
            <%= f.submit 'Actualizar Cliente', :class => "btn btn-success btn-lg" %>
          </div>
        </div>
      <% end %>
  </div>
</div> 
