<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-signin" }) do |f| %>
	<%= devise_error_messages! %>
	<h2 class="form-signin-heading">PushVendor</h2>

  <%= f.email_field :username, :class => 'form-control', :placeholder => 'Email Address' %>

  <%= f.password_field :password, :class => 'form-control', :placeholder => 'Password' %>
  <%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => 'Password Confirmation' %>

  <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
  <%= render "devise/shared/links" %>
  <p class="copyright">Copyright &copy; 2013 PushVendor</p>
<% end %>

