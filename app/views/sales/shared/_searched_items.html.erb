<h4 class="text-primary"><span class="glyphicon glyphicon-tags"></span> Artículos Buscados</h4>
<hr />
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>#</th>
    <th>Articulo</th><!-- Item-->
        <th>Descripcion</th><!-- Description-->
        <th>Priecio</th><!-- Price-->
        <th>Añadir</th><!-- Find-->
      </tr>
    </thead>

    <tbody>
      <% unless @available_items.blank? %>
      	<% for item in @available_items %>
          <tr>
            <td><%= item.sku %></td>
            <td><%= item.name %></td>
            <td><%= item.description %></td>
            <td><%= number_to_currency(item.price) %></td>
            <td class="add_to_current_sale"><%= link_to url_for(:controller => 'sales', :action => 'create_line_item', :item_id => item.id, :sale_id => @sale.id, :quantity => 1), :remote => true do %><p><span class="glyphicon glyphicon-plus"></span></p><% end %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>

