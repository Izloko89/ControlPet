<% unless @sale.customer.blank? %>
	<h4 class="text-primary">
		<span class="glyphicon glyphicon-user"></span> Customer
	</h4>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Apellido</th>
          <th>Correo Eléctronico</th>
          <th>Telefono</th>
          <th>Dirección</th>
          <th>Ciudad</th>
          <th>Estado</th>
          <th>C.P</th>
        </tr>
      </thead>

      <tbody>
        <%= fields_for @sale do |f|%>
          <%= f.fields_for :customer, Customer.where(:id => @sale.customer_id,:user_id => current_user.user_id ).first do |e| %>
            <tr>
              <td><%= e.text_field :first_name, :class => "form-control", :placeholder => "First Name", :readonly => true %></td>
              <td><%= e.text_field :last_name, :class => "form-control", :placeholder => "Last Name", :readonly => true %></td>
              <td><%= e.text_field :email_address, :class => "form-control", :placeholder => "Email Address", :readonly => true %></td>
              <td><%= e.text_field :phone_number, :class => "form-control", :placeholder => "Email Address", :readonly => true %></td>
              <td><%= e.text_field :address, :class => "form-control", :placeholder => "Email Address", :readonly => true %></td>
              <td><%= e.text_field :city, :class => "form-control", :placeholder => "Email Address", :readonly => true %></td>
              <td><%= e.text_field :state, :class => "form-control", :placeholder => "Email Address", :readonly => true %></td>
              <td><%= e.text_field :zip, :class => "form-control", :placeholder => "Email Address", :readonly => true %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

<% end %>