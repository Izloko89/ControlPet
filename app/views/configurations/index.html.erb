<%= form_for(@configuration, url: { controller: 'configurations', action: 'update'}) do |f| %>

  <div class="panel panel-default">
    <div class="panel-body">
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label>Nombre Del Negocio</label>
            <%= f.text_field :store_name, :class => "form-control", :placeholder => "Name of store" %>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label>Descripcion Del Negocio</label>
            <%= f.text_area :store_description, :class => "form-control", :placeholder => "Description of store" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label>Email</label>
            <%= f.text_field :email_address, :class => "form-control", :placeholder => "Email address" %>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label>Telefono</label>
            <%= f.text_field :phone_number, :class => "form-control", :placeholder => "Phone number" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label>Direccion</label>
            <%= f.text_field :address, :class => "form-control", :placeholder => "Address" %>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label>Ciudad</label>
            <%= f.text_field :city, :class => "form-control", :placeholder => "City" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label>State</label>
            <%= f.text_field :state, :class => "form-control", :placeholder => "State" %>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label>C.P</label>
            <%= f.text_field :zip, :class => "form-control", :placeholder => "Zip" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label>Impuesto Actual</label>
            <%= f.text_field :tax_rate, :class => "form-control", :placeholder => "8.25" %>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label>Pagina Web URL</label>
            <%= f.text_field :website_url, :class => "form-control", :placeholder => "www.example.com" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <%= f.submit 'Actualizar Negocio', :class => "btn btn-success btn-lg" %>
    </div>
  </div>
<% end %>
