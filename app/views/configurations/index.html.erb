<%= form_for(@configuration, url: { controller: 'configurations', action: 'update'}) do |f| %>

  <div class="panel panel-default">
    <div class="panel-body">
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label>Store Name</label>
            <%= f.text_field :store_name, :class => "form-control", :placeholder => "Name of store" %>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label>Store Description</label>
            <%= f.text_area :store_description, :class => "form-control", :placeholder => "Description of store" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label>Email Address</label>
            <%= f.text_field :email_address, :class => "form-control", :placeholder => "Email address" %>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label>Phone Number</label>
            <%= f.text_field :phone_number, :class => "form-control", :placeholder => "Phone number" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label>Address</label>
            <%= f.text_field :address, :class => "form-control", :placeholder => "Address" %>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label>City</label>
            <%= f.text_field :city, :class => "form-control", :placeholder => "City" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label>State</label>
            <%= f.text_field :state, :class => "form-control", :placeholder => "State" %>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label>Zip</label>
            <%= f.text_field :zip, :class => "form-control", :placeholder => "Zip" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label>Tax Rate</label>
            <%= f.text_field :tax_rate, :class => "form-control", :placeholder => "8.25" %>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label>Website URL</label>
            <%= f.text_field :website_url, :class => "form-control", :placeholder => "www.example.com" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <%= f.submit 'Update Store', :class => "btn btn-success btn-lg" %>
    </div>
  </div>
<% end %>
