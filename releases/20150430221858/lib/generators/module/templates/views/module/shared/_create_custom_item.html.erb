<div class="create_an_item">
  <%= form_for :custom_item, :url => url_for(:controller => "sales", :action => "create_custom_item", :sale_id => @sale.id, :format => :js), :method => "get", :remote => true, :html => { :class => "form_custom_item"} do |f| %>
    
    <div class="form-group">
      <label>Category</label>
      <%= f.collection_select :item_category_id, ItemCategory.all, :id, :name, {prompt: "Select a category"}, {class: "form-control"}  %>
    </div>
    <div class="form-group">
      <label>Name</label>
      <%= f.text_field :name, :class => "form-control", :placeholder => "Name" %>
    </div>
    <div class="form-group">
      <label>Description</label>
      <%= f.text_area :description, :class => "form-control", :placeholder => "Description" %>
    </div>
    <div class="form-group">
      <label>Price</label>
      <%= f.text_field :price, :class => "form-control", :placeholder => "Price" %>
    </div>
    <div class="form-group">
      <label>Quantity</label>
      <%= f.text_field :stock_amount, :class => "form-control", :placeholder => "Quantity" %>
    </div>
    <div class="form-group"><%= f.submit 'Add Item', :class => "btn close_custom_modal" %></div>
        
  <% end %>
</div>